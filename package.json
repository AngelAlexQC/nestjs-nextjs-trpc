{
  "name": "nestjs-nextjs-trpc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm --filter server build && pnpm --filter web build",
    "build:server": "pnpm --filter server build",
    "build:web": "pnpm --filter web build",
    "build:admin": "pnpm --filter admin build",
    "start:server": "pnpm --filter server start:prod",
    "start:web": "pnpm --filter web start",
    "start:admin": "pnpm --filter admin start",
    "preinstall": "npx only-allow pnpm",
    "test": "pnpm run --filter server test",
    "test:e2e": "pnpm run --filter server test:e2e",
    "test:cov": "pnpm run --filter server test:cov",
    "prepare": "husky install",
    "lint": "npx eslint . --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "13.2.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{json,md,yml}": [
      "npx prettier --write"
    ],
    "*.{css,scss}": [
      "npx stylelint --fix",
      "npx prettier --write"
    ],
    "*.{graphql,gql}": [
      "npx prettier --write"
    ]
  }
}
